print("Welcome to Treasure Island.")
print("Your mission is to find the treasure.")
x=input("Where do you want to go? Type left or right\n").lower()
if x == "left":
    y=input("do you want to swim or wait? Type swim or wait\n").lower()
    if y=="wait":
        z=input("which house you choose? Type red or yellow or blue\n").lower()
        if z=="yellow":
          print("You found the treasure! You Win!")
        elif z=="red":
          print("Game Over.") 
        elif z=="blue":
          print("Game Over.")  
        else:
            print("door doesn't exist,Game Over.")
    else:
       print("You get attacked by an angry shark. Game Over.")
else:
   print("You fell into a hole. Game Over.")   
